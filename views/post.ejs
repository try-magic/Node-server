<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Test blog!</title>
	<link rel="stylesheet" href="/stylesheets/main.css" type="text/css" />
</head>
<body>
	<header class="header">
		<div class="container">
			<a class="logo"><i class="icon icon-cloud"></i><i class="icon icon-desklamp"></i></a>
			<form class="search-form" name="search-form">
				<input type="text" class="search-input" name="searchInput" placeholder="Search..."/>
				<a href="#" class="btn btn-primary"><i class="icon icon-search"></i></a>
			</form>
			<ul class="header__menu">
				<li><a href="#blog">Blog</a></li>
				<li><a href="#about">About author</a></li>
			</ul>
		</div>
	</header>
	<section class="content">
		<div class="container">
			<aside class="right-col pull-right">
				<section class="category-list">
					<h3 class="title">Categories</h3>
					<ul class="categories">
						<li><a class="link" href="#">Javascript</a></li>
						<li><a class="link" href="#">HTML</a></li>
						<li><a class="link" href="#">CSS</a></li>
					</ul>
				</section>
				<section class="tag-list">
					<h3 class="title">Tags</h3>
					<ul class="tags list-inline">
						<li><a class="btn btn-primary" href="#">tag1</a></li>
						<li><a class="btn btn-primary" href="#">tag2</a></li>
						<li><a class="btn btn-primary" href="#">tag3</a></li>
						<li><a class="btn btn-primary" href="#">tag4</a></li>
						<li><a class="btn btn-primary" href="#">tag5</a></li>
					</ul>
				</section>
			</aside>
			<div class="main-col pull-left">
				<article class="article">
					<header class="article__header">
						<h2 class="article__title"><a class="link" href="/post/<%= post.ID %>"><%= post.name %></a></h2>
						<time><%= post.date %></time>
					</header>
					<p><%= post.text %></p>
					<footer class="article__footer">
						<ul class="tags list-inline">
							<% post.tags.forEach(function(tag) { %>
								<li><a class="btn btn-primary" href="#"><%= tag %></a></li>
							<% }); %>
						</ul>
						<ul class="social-links list-inline">
							<li><a class="link" href="#"><i class="icon icon-twitter"></i></a></li>
							<li><a class="link" href="#"><i class="icon icon-facebook"></i></a></li>
							<li><a class="link" href="#"><i class="icon icon-googleplus"></i></a></li>
						</ul>
						<ul class="article__comments">
							<li class="comments__item">
								<h3 class="comments__title">Comments:</h3>
							</li>
							<% post.comments.forEach( function(comment) { %>
							<li class="comments__item">
								<header class="comment__header">
									<h4 class="comment__title">
										<span><%= comment.name %></span>
										<a class="link" href="mailto:<%= comment.email %>"><i class="icon icon-emailalt"></i></a>
										<a class="link" href="<%= comment.website %>"><i class="icon icon-globe"></i></a>
									</h4>
									<time><%= post.date %></time>
								</header>
								<p><%= comment.text %></p>
							</li>
							<% }); %>
						</ul>
					</footer>
				</article>
				<form action="/post/<%= post.ID %>" id="commentForm" class="comment-form clearfix" method="post">
					<div class="form-controls pull-left">
						<label>Name:</label>
						<input type="text" name="name" placeholder="name">
					</div>
					<div class="form-controls pull-left">
						<label>Email:</label>
						<input type="text" name="email" placeholder="email">
					</div>
					<div class="form-controls pull-left">
						<label>Website:</label>
						<input type="text" name="website" placeholder="website">
					</div>
					<div class="form-controls">
						<label>Comment text:</label>
						<textarea name="text" id="" cols="30" rows="10" placeholder="Leave a comment here..."></textarea>
					</div>
					<div class="form-controls">
						<button class="btn btn-primary pull-right" type="submmit">Add comment</button>
					</div>
				</form>
			</div>
		</div>
	</section>
	<footer class="footer bg-primary">
		<div class="container">
			<h3>Â© created for EPAM Systems</h3>
		</div>
	</footer>
</body>
</html>